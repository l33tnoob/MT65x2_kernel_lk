<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:paddingBottom="6dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="6dp" >
    <com.mediatek.rcse.activities.widgets.AsyncAvatarView
        android:id="@+id/peer_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/default_header"/>

	<com.mediatek.rcse.activities.widgets.DateView
	    android:id="@+id/file_transfer_time"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignTop="@id/peer_avatar"
	    android:layout_marginBottom="6dp"
	    android:layout_toRightOf="@id/peer_avatar"
	    android:ellipsize="end"
	    android:paddingLeft="10dp"
	    android:singleLine="true"
	    android:textColor="#515151"
	    android:textSize="12sp" />

    <RelativeLayout
        android:id="@+id/file_transfer_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/file_transfer_time"
        android:layout_toRightOf="@id/peer_avatar"
        android:background="@drawable/back_ground_received_message"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp" >
        <RelativeLayout
            android:id="@+id/file_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <ImageView
                android:id="@+id/image_type"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:maxWidth="46dp"
                android:minWidth="20dp"
                android:layout_centerVertical="true" >
            </ImageView>

            <TextView
                android:id="@+id/file_transfer_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:paddingLeft="4dp"
                android:layout_toRightOf="@id/image_type"
                android:maxWidth="140dp"
                android:textColor="#191919"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/file_transfer_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:layout_below="@id/file_transfer_display"
                android:layout_toRightOf="@id/image_type"
                android:maxWidth="140dp"
                android:singleLine="true"
                android:textColor="#7e7e7e"
                android:textSize="14sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/file_transfer_reject"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/file_description"
            android:text="@string/file_transfer_button_reject"
            android:textSize="14sp" />

        <Button
            android:id="@+id/file_transfer_accept"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/file_description"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/file_transfer_reject"
            android:text="@string/file_transfer_button_accept"
            android:textSize="14sp" />

    </RelativeLayout>
</RelativeLayout>