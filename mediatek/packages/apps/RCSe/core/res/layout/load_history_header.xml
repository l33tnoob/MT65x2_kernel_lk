 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="64dp"
     android:background="#FFFFFF">
     <ImageView
        android:id="@+id/list_devider_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@*android:drawable/list_divider_holo_light" />
     <TextView 
     	android:id="@+id/load_chat_history"
     	android:layout_width="wrap_content"
     	android:layout_height="64dp"
        android:text="@string/load_history"
        android:textColor="#333333"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_below="@id/list_devider_top"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/load_chat_history"
        android:background="@*android:drawable/list_divider_holo_light" />
 </RelativeLayout>